<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFF6E5">
        <ImageButton
            android:id="@+id/push_search_back"
            android:layout_width="12dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/back_yellow_brown" />
        <EditText
            android:id="@+id/push_search_et"
            android:layout_width="235dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/all_radius_noframe_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawablePadding="10dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="搜索图片"
            android:textSize="16sp"
            android:drawableLeft="@mipmap/search_yellow_brown"
            android:drawableRight="@mipmap/camera_yellow_brown"/>
        <TextView
            android:id="@+id/push_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:text="搜索"
            android:textSize="18sp"
            android:textColor="#886F3A"/>
    </RelativeLayout>
    <com.example.mytest.Common.MyViewPager
        android:id="@+id/push_search_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>