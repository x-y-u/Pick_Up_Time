<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="310dp"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/phonenum"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="@string/prompt_phonenum"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:background="@drawable/round_shadow_et_bg"
            android:paddingLeft="15dp"
            android:inputType="phone"
            android:drawableLeft="@mipmap/phonenum"
            android:drawablePadding="3dp"/>
        <EditText
            android:id="@+id/acountnum"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="@string/prompt_acountnum"
            android:textSize="15sp"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/phonenum"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:background="@drawable/round_shadow_et_bg"
            android:drawableLeft="@mipmap/acountnum"
            android:drawablePadding="3dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="@string/prompt_password"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/acountnum"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:background="@drawable/round_shadow_et_bg"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="5.5dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="立即注册"
            android:textSize="18sp"
            android:layout_below="@+id/password"
            android:layout_marginTop="55dp"
            android:background="@drawable/ripple_red_btn"/>

    </RelativeLayout>
</RelativeLayout>