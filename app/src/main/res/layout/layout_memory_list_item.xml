<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <View
                android:layout_width="3dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="#F8C06B"/>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/memory_item_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="18"
                    android:textSize="30sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/memory_item_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:text="7月"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/memory_item_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="2021"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="#B5B5B5"/>
            <RelativeLayout
                android:id="@+id/memory_item_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/memory_item_icon"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/memory_first_card"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    app:cardCornerRadius="5dp">
                    <ImageView
                        android:id="@+id/memory_first_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/head_image1"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/memory_first_card"
                    android:paddingLeft="15dp">
                    <TextView
                        android:id="@+id/memory_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="杭州一日游"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/memory_item_voice_iv"
                        android:layout_width="80dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/memory_voice1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="3dp"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/text_round_pink_bg">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="13dp"
                                android:src="@mipmap/event_address"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="嘉兴"
                                android:textSize="16sp"
                                android:textColor="#484545"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingRight="8dp"
                            android:paddingLeft="8dp"
                            android:text="红船"
                            android:textSize="16sp"
                            android:background="@drawable/text_round_blue_bg"/>
                        <ImageView
                            android:id="@+id/memory_item_people_iv"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/memory_people1"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>