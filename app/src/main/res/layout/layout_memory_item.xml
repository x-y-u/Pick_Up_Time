<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/memory_item_content"
        android:paddingRight="5dp"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/memory_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="-4dp"
            android:paddingRight="5dp"/>
        <TextView
            android:id="@+id/memory_item_monthandweekdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7月/周五"
            android:textSize="15sp"
            android:layout_gravity="center" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/memory_item_content"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/memory_item_bg"
        android:paddingTop="20dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="20dp"
        android:layout_margin="15dp">
        <TextView
            android:id="@+id/memory_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="5"
            android:paddingLeft="15dp"
            android:text="我把你画成花\n未开的一朵花\n再把思念一点一滴\n画成雨落下"
            android:textSize="18sp"
            android:textIsSelectable="true"/>
        <com.example.mytest.Common.MyGridView
            android:id="@+id/memory_item_image_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:layout_below="@+id/memory_words"
            android:layout_marginTop="5dp"
            android:listSelector="#0000"
            android:scrollbarSize="@dimen/activity_vertical_margin"/>
    </RelativeLayout>
</RelativeLayout>