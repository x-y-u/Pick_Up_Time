<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/main_personal"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/main_personal"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>
    <ImageView
        android:id="@+id/main_scanning"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/scanning_white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/main_tab1"
        android:layout_width="130dp"
        android:layout_height="190dp"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/main_tab1"/>
    <ImageView
        android:id="@+id/main_tab2"
        android:layout_width="130dp"
        android:layout_height="190dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="125dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/main_tab2"/>
    <ImageView
        android:id="@+id/main_tab3"
        android:layout_width="185dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="335dp"
        android:src="@drawable/main_tab3"/>
    <ImageView
        android:id="@+id/main_tab4"
        android:layout_width="130dp"
        android:layout_height="210dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/main_tab4"/>
    <ImageView
        android:id="@+id/main_tab5"
        android:layout_width="130dp"
        android:layout_height="210dp"
        android:layout_marginTop="445dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/main_tab5"/>
</RelativeLayout>