<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/main_personal"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/main_personal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/main_tab1"
        android:layout_width="130dp"
        android:layout_height="190dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/main_tab1"/>
    <ImageView
        android:id="@+id/main_tab2"
        android:layout_width="130dp"
        android:layout_height="190dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/main_tab2"/>
    <ImageView
        android:id="@+id/main_tab3"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:src="@drawable/main_tab3"/>
    <ImageView
        android:id="@+id/main_tab4"
        android:layout_width="130dp"
        android:layout_height="210dp"
        android:layout_marginTop="435dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/main_tab4"/>
    <ImageView
        android:id="@+id/main_tab5"
        android:layout_width="130dp"
        android:layout_height="210dp"
        android:layout_marginTop="430dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/main_tab5"/>
    <ImageView
        android:id="@+id/main_camera"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/main_camera"/>
</RelativeLayout>