<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/push_after_search_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/push_after_search_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_shadow_bg">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/push_after_search_bt1"/>
        <ImageView
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/push_after_search_bt2"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/push_after_search_bt3"/>
    </RelativeLayout>
</RelativeLayout>