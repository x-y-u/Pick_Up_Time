<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_shadow_bg">
        <ImageView
            android:id="@+id/make_note_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/black_arrow_back"/>
        <TextView
            android:id="@+id/make_note_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/text_round_indianred_bg"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="完成"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <EditText
            android:id="@+id/make_note_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="标题"
            android:paddingLeft="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColorHint="#595959"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D7D4D4" />
        <EditText
            android:id="@+id/make_note_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color"
            android:paddingLeft="8dp"
            android:hint="写点什么吧"
            android:gravity="top"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>