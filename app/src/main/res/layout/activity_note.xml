<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/note_bg">
    <RelativeLayout
        android:id="@+id/note_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/note_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="笔记"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <ImageButton
            android:id="@+id/make_note_bt"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@mipmap/make_note"/>
        <TextView
            android:id="@+id/note_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="invisible"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/note_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/note_top"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dp"
            android:background="@drawable/all_radius_bg"
            android:textCursorDrawable="@drawable/cursor_color"
            android:drawableLeft="@mipmap/search"
            android:paddingLeft="15dp"
            android:drawablePadding="10dp"
            android:hint="搜索笔记"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/note_search"
        android:paddingTop="15dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notes_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/note_add_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/indianred"
        app:fabSize="auto"
        android:src="@mipmap/add_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="30dp"/>
    <RelativeLayout
        android:id="@+id/note_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_shadow_bg"
        android:visibility="invisible">
        <CheckBox
            android:id="@+id/is_all_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="全选"
            android:textSize="17sp"
            android:textColor="#474747"
            android:button="@drawable/checkbox_bg"/>
        <TextView
            android:id="@+id/selected_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/is_all_selected"
            android:layout_marginLeft="5dp"
            android:background="@drawable/text_circle_red_bg"
            android:text="5"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <ImageButton
            android:id="@+id/note_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/note_delete"/>
    </RelativeLayout>
</RelativeLayout>