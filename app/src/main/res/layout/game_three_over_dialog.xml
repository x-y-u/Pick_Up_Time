<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/game_three_bg">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/game_three_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="答题结束"
            android:textSize="22sp"
            android:textColor="#484545"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你本次的分数是"
                android:textSize="18sp"
                android:textColor="#484545"/>
            <TextView
                android:id="@+id/game_three_over_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="90"
                android:textSize="25sp"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="18sp"
                android:textColor="#484545"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满分是"
                android:textSize="18sp"
                android:textColor="#484545"/>
            <TextView
                android:id="@+id/game_three_over_maxscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="100"
                android:textSize="25sp"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="18sp"
                android:textColor="#484545"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="仍然需要加油哦~"
            android:textColor="#484545"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/game_three_over_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="38dp"
            android:paddingRight="38dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:text="确认"
            android:textColor="#484545"
            android:textSize="18sp"
            android:background="@drawable/game_three_bt_bg"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>