<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bottom_bg">
        <ImageButton
            android:id="@+id/drawer_left_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:background="@mipmap/time_list"/>
        <ImageButton
            android:id="@+id/memory_tree"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/home"/>
    </RelativeLayout>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/memory_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF6E8">
        <ListView
            android:id="@+id/memory_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_gravity="left">
            <ListView
                android:id="@+id/memory_time_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#000000" />
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>