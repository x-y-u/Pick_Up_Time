<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/bottom_bg"
    android:clipChildren="false">
    <RelativeLayout
        android:id="@+id/tab_push"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="bottom">
        <ImageView
            android:id="@+id/img_push"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="false"
            android:src="@mipmap/push_unselected"
            android:background="#00000000"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tab_memory"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="bottom">
        <ImageView
            android:id="@+id/img_memory"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="false"
            android:src="@mipmap/memory_unselected"
            android:background="#00000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tab_album"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <ImageView
            android:id="@+id/img_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:src="@mipmap/album"
            android:background="#00000000"
            android:layout_marginBottom="15dp"
            android:scaleType="matrix" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tab_post"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="bottom">
        <ImageView
            android:id="@+id/img_post"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="false"
            android:src="@mipmap/post_unselected"
            android:background="#00000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tab_relax"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="bottom">
        <ImageView
            android:id="@+id/img_relax"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:clickable="false"
            android:src="@mipmap/relax_unselected"
            android:background="#00000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>